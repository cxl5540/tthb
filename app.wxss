/**app.wxss**/
.container {
  height: 100%;
  box-sizing: border-box;
} 
page{
  color: #333333;
  font-size: 28rpx;
  --tc:#3FB5A2;
  --f_s:28rpx;
 
}
.box-line{
  box-shadow: 0px 0px 15rpx 0px rgba(40, 112, 105, 0.15);
  border-radius: 10rpx;
}
.w_c{
  color: #ffffff;
}
.bold{
  font-weight: bold;
}
.wh{
  width: 94%;
  margin: auto;
}
.flex{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.model{
  width: 100%;
  height: 100vh;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 100;
  background: rgba(0,0,0,0.5);
}
.radius{
  box-shadow: 0px 0px 15rpx 0px rgba(40, 112, 105, 0.2);
    border-radius: 10rpx;
}
input{
  text-align: left;
}
.wx-switch-input::before {
  background: #BFBFBF !important;
}
.van-stepper__input{
  width: 150rpx !important;
}
.van-stepper__input,.van-stepper__plus,.van-stepper__minus{
  background: #ffffff !important;
}
.weui-tabs-bar__wrp{
  height: 88rpx;
  display: flex;
  align-items: center;
}
.richImg{
  max-width: 100% !important;
  width: 100% !important;
}
button{
  font-size: 28rpx !important;
  font-weight: 400 !important;
  padding: 0 !important;
}
.contact_btn{
  position: absolute;
  top: 0;
  left: 0;
  width: 100% !important;
  height: 100%;
  z-index: 99;
  background: transparent;
  color: transparent;
}