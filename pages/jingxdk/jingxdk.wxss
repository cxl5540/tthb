.container > .txt {
  height: 80rpx;
  margin: 30rpx 0;
}
.container > .txt > view {
  font-size: 30rpx;
  height: 110rpx;
  width: 339rpx;
  position: relative;
}
.container > .txt > view > image {
  width: 100%;
  height: 110rpx;
}
.container > .txt > view > view {
  position: absolute;
  left: 0;
  line-height: 110rpx;
  width: 100%;
  text-align: center;
  color: #ffffff;
}
.container > .txt > view > view > image {
  width: 36rpx;
  height: 36rpx;
  vertical-align: sub;
  margin-right: 20rpx;
}
.container > .content {
  box-shadow: 0px 0px 15px 0px rgba(40, 112, 105, 0.2);
  border-radius: 10rpx;
  box-sizing: border-box;
  padding: 30rpx;
  margin-top: 60rpx;
}
.container > .content > view {
  margin-bottom: 40rpx;
}
