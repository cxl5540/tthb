page {
  background: rgba(47, 140, 125, 0.08);
}
.top,
.concat {
  background: #ffffff;
  border-radius: 10rpx;
  margin: 30rpx auto;
  box-sizing: border-box;
  padding: 30rpx 20rpx;
}
.top > view:nth-child(1),
.concat > view:nth-child(1) {
  border-left: 6rpx solid #5FACF0;
  padding-left: 20rpx;
  font-weight: bold;
}
