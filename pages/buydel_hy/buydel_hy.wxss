page {
  background: rgba(63, 181, 162, 0.1);
}
.container .hed {
  padding: 30rpx 20rpx;
}
.container .hed > view > text {
  height: 54rpx;
  background: #D3F1FF;
  border-radius: 5rpx;
  color: #0097DE;
  padding: 10rpx;
  margin-left: 20rpx;
}
.container .inpts {
  background: #ffffff;
  border-radius: 10rpx;
}
.container .inpts > view {
  display: flex;
  box-sizing: border-box;
  padding: 30rpx 20rpx;
  border-bottom: 1px solid #eee;
}
.container .inpts > view > text {
  flex: 0.25;
}
.container .inpts > view > input {
  flex: 0.75;
  position: relative;
  padding: 0 0 0 40rpx;
  border-left: 1px solid #E5E5E5;
}
.container .concat {
  width: 100%;
  background: #FFFFFF;
  position: fixed;
  left: 0;
  bottom: 0;
  box-sizing: border-box;
  padding: 20rpx;
  z-index: 10;
}
.container .concat > button {
  height: 72rpx;
  width: 702rpx;
  margin: auto;
  border: 1px solid #3FB5A2;
  border-radius: 10rpx;
  line-height: 72rpx;
  color: #3CA897;
  background: rgba(68, 198, 173, 0.2);
}
.container .concat > button > image {
  width: 36rpx;
  height: 36rpx;
  vertical-align: sub;
  margin-right: 10rpx;
}
.content {
  background: #ffffff;
  box-sizing: border-box;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}
.content > .flex {
  background: rgba(106, 154, 196, 0.1);
  box-sizing: border-box;
  padding: 20rpx;
  margin-top: 10rpx;
}
.content > .flex > view {
  width: 440rpx;
  height: 160rpx;
  position: relative;
}
.content > .flex > view > view {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
}
.content > .flex > view > view > text {
  color: #E00000;
  font-size: 36rpx;
}
