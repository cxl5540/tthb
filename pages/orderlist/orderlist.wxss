page {
  background: #EEEEEE;
}
.hed {
  background: #F19149;
  padding: 30rpx 20rpx;
  color: #ffffff;
}
.container > .list {
  background: #ffffff;
  margin-top: 30rpx;
}
.container > .list .item {
  padding: 0 0 0rpx 0;
  border-bottom: 1px solid #eee;
  border-radius: 10rpx;
}
.container > .list .item > view {
  box-sizing: border-box;
  padding: 8rpx 20rpx;
}
.container > .list .item > view > text:nth-child(2) {
  color: red;
}
.container > .list .item .rt {
  width: 90%;
}
.container > .list .item .rt > view:nth-child(1) {
  font-weight: bold;
  margin-top: 20rpx;
}
.container > .list .item .rt > view:nth-child(2) {
  font-size: 24rpx;
  color: #666666;
}
.container > .list .item .rt > view:nth-child(3) {
  text-align: right;
}
.container > .list .item .rt > view:nth-child(3) > text {
  color: red;
}
